<?xml version="1.0" encoding="utf-8" ?>
<Grid x:Class="randomkiwi.Views.BookmarkView"
      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:controls="clr-namespace:randomkiwi.Views.Controls"
      xmlns:progressBar="clr-namespace:Syncfusion.Maui.Toolkit.ProgressBar;assembly=Syncfusion.Maui.Toolkit"
      xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
      xmlns:viewModels="clr-namespace:randomkiwi.ViewModels"
      x:DataType="viewModels:BookmarkViewModel"
      ColumnDefinitions="*"
      RowDefinitions="*">

    <!--  Web View  -->
    <ContentView Grid.Row="0" Grid.Column="0" IsVisible="{Binding IsLoaded}">
        <controls:WikipediaWebView BindingContext="{Binding WebViewViewModel}" />
    </ContentView>

    <!--  Loading  -->
    <progressBar:SfCircularProgressBar Grid.Row="0" Grid.Column="0" Background="Transparent"
                                       IsIndeterminate="True"
                                       IsVisible="{Binding IsLoading}"
                                       ProgressFill="{StaticResource Kiwi}"
                                       WidthRequest="100" />

</Grid>