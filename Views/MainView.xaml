<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="randomkiwi.Views.MainView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:randomkiwi.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="OverviewPage"
             x:DataType="pageModels:MainViewModel">

    <Grid ColumnDefinitions="*" RowDefinitions="*,Auto">
        <WebView Grid.Row="0" Grid.Column="0"
                 Source="https://en.m.wikipedia.org/wiki/Special:Random" />
        <HorizontalStackLayout Grid.Row="1" Grid.Column="0"
                               HeightRequest="70" HorizontalOptions="Center">
            <ImageButton Margin="20,0"
                         Aspect="Center"
                         Command="{Binding PreviousArticleCommand}"
                         HeightRequest="44" HorizontalOptions="End"
                         Source="{StaticResource IconGoBack}"
                         VerticalOptions="Center" WidthRequest="44" />

            <ImageButton Margin="20,0"
                         Aspect="Center"
                         Command="{Binding NextArticleCommand}"
                         HeightRequest="44" HorizontalOptions="End"
                         Source="{StaticResource IconRefresh}"
                         VerticalOptions="Center" WidthRequest="44" />

            <ImageButton Margin="20,0"
                         Aspect="Center"
                         Command="{Binding AddBookmarkCommand}"
                         HeightRequest="44" HorizontalOptions="End"
                         Source="{StaticResource IconBookmark}"
                         VerticalOptions="Center" WidthRequest="44" />

        </HorizontalStackLayout>
    </Grid>

</ContentPage>
