<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="randomkiwi.MainView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:constants="clr-namespace:randomkiwi.Constants"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Toolkit.Popup;assembly=Syncfusion.Maui.Toolkit"
             xmlns:res="clr-namespace:randomkiwi.Resources"
             xmlns:viewModels="clr-namespace:randomkiwi.ViewModels"
             xmlns:views="clr-namespace:randomkiwi.Views"
             x:Name="MainPage"
             x:DataType="viewModels:MainViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                               Dark={StaticResource DarkBackground}}">

    <Grid>
        <!--  Main Content Area  -->
        <Grid RowDefinitions="Auto,*">
            <!--  Title Bar  -->
            <Grid Grid.Row="0" Padding="8,0" HeightRequest="56">

                <Image Aspect="AspectFit" Background="Transparent" HeightRequest="30"
                       HorizontalOptions="Center" Source="logo.png" VerticalOptions="Center" />

                <ImageButton Aspect="Center"
                             Command="{Binding ToggleFlyoutCommand}"
                             HeightRequest="44" HorizontalOptions="Start"
                             Source="{StaticResource IconHamburger}"
                             VerticalOptions="Center" WidthRequest="44" />

                <ImageButton Aspect="Center"
                             Command="{Binding OpenOverflowMenuCommand}"
                             HeightRequest="44" HorizontalOptions="End"
                             IsVisible="{Binding CanOpenOverflowMenu}"
                             Source="{StaticResource IconMore}"
                             VerticalOptions="Center" WidthRequest="44" />

            </Grid>

            <!--  Main Content  -->
            <ContentView x:Name="ContentArea" Grid.Row="1" />
        </Grid>

        <!--  Flyout Menu Overlay  -->
        <Grid IsVisible="{Binding IsFlyoutPresented}">
            <!--  Background overlay  -->
            <BoxView BackgroundColor="Black" Opacity="0.5">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CloseFlyoutCommand}" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <!--  Flyout Panel  -->
            <Border BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                      Dark={StaticResource DarkBackground}}"
                    HorizontalOptions="Start" VerticalOptions="Fill" WidthRequest="230">
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Radius="10"
                            Offset="2,2" />
                </Border.Shadow>

                <Grid RowDefinitions="Auto,*">
                    <Grid Grid.Row="0" HeightRequest="80">
                        <Image Aspect="AspectFit" Background="Transparent" HeightRequest="40"
                               HorizontalOptions="Center" Source="logo.png" VerticalOptions="Center" />
                    </Grid>

                    <!--  Menu Items  -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto">
                        <Button Grid.Row="0" Padding="20" BackgroundColor="Transparent"
                                Command="{Binding NavigateToHomeCommand}"
                                FontSize="16"
                                Text="{x:Static res:Languages.Home}"
                                TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                            Dark={StaticResource LightOnDarkBackground}}" />

                        <Button Grid.Row="1" Padding="20" BackgroundColor="Transparent"
                                Command="{Binding NavigateToBookmarksCommand}"
                                FontSize="16"
                                Text="{x:Static res:Languages.Bookmarks}"
                                TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                            Dark={StaticResource LightOnDarkBackground}}" />

                        <Button Grid.Row="2" Padding="20" BackgroundColor="Transparent"
                                Command="{Binding NavigateToSettingsCommand}"
                                FontSize="16"
                                Text="{x:Static res:Languages.Settings}"
                                TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                            Dark={StaticResource LightOnDarkBackground}}" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <popup:SfPopup x:Name="popupWikipediaRandomSettings" HeightRequest="550" ShowFooter="False"
                       ShowHeader="False" StaysOpen="True">
            <popup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <views:WikipediaRandomSettingsView />
                </DataTemplate>
            </popup:SfPopup.ContentTemplate>
        </popup:SfPopup>

    </Grid>

</ContentPage>