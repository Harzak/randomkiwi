<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="randomkiwi.Views.Controls.WikipediaWebView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:randomkiwi.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:randomkiwi.ViewModels"
             x:Name="Root"
             x:DataType="viewModels:WikipediaWebViewViewModel">

    <WebView Cookies="{Binding CookiesContainer}"
             Navigated="WebView_Navigated" Navigating="WebView_Navigating"
             Source="{Binding CurrentUrl}" />

</ContentView>